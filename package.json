{
  "name": "hexo-renderer-rollup",
  "version": "0.0.3",
  "description": "Rollup renderer plugin for Hexo.",
  "main": "index.js",
  "files": [
    "index.js",
    "lib/"
  ],
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "npm run lint",
    "format": "prettier -w ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akijoey/hexo-renderer-rollup.git"
  },
  "keywords": [
    "hexo",
    "rollup"
  ],
  "author": "AkiJoey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/akijoey/hexo-renderer-rollup/issues"
  },
  "homepage": "https://github.com/akijoey/hexo-renderer-rollup#readme",
  "devDependencies": {
    "@akijoey/eslint-config": "latest",
    "@akijoey/prettier-config": "latest",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": "^7.14.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.0"
  },
  "dependencies": {
    "rollup": "^2.33.3"
  },
  "prettier": "@akijoey/prettier-config",
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{js,json,yml,md}": "prettier -w"
  }
}
